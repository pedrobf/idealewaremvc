                <input type="submit" value="Deletar" class="btn btn-primary btn-block btn-danger " />
            </div>
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-second btn-block" style="color:#fdfdfd; font-size: 12pt; background-image: linear-gradient(135deg, #0091da 0%,#00aca0 100%);
                    border-radius: 4px; border: #0091da"><i class="fa fa-table"></i>Voltar</a>
            </div>
        </div>
    </form>
</div>
