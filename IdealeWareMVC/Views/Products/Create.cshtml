@model IdealeWareMVC.Models.ViewModels.ProductsFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Novo Produto</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.IdCategory" class="control-label"></label>
                <select asp-for="Product.IdCategory" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category.Description" class="control-label"></label>
                <select asp-for="Product.IdCategory" asp-items="@(new SelectList(Model.Categories, "Id", "Description"))" class="form-control"></select>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Criar" class="btn btn-primary btn-block" style="color:#fdfdfd; font-size: 12pt; background-image: linear-gradient(135deg, #0091da 0%,#00aca0 100%);
                    border-radius: 4px; border: #0091da">
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-second btn-block" style="color:#fdfdfd; font-size: 12pt; background-image: linear-gradient(135deg, #0091da 0%,#00aca0 100%);
                    border-radius: 4px; border: #0091da"><i class="fa fa-table"></i>Listar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
